<div class="login-signin">

<div class="login-signup-btns">
  <% if current_user %>
    <h2><%= link_to 'Log Out', sessions_path, method: :delete %></h2>
  <% else %>
    <h2 class='login-btn'>Login</h2> <h2 class='signup-btn'>Signup</h2>
  <% end %>
</div>

<div class="signup-container">

<h1>Sign Up</h1>

<%= form_for(@user, url: user_path) do |f| %>
  <%if @user.errors.any? %>
    <div class="error_messages">
      <h2>Entry is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li> <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="account-info">
    <h2>Account Info</h2>

    <button type="button" class="close">x</button>

    <div class="">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>


  <div class="personal-info">

    <h2>Personal Information</h2>

      <div class="">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>

      <div class="">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>

      <div class="">
        <%= f.label :phone_number %>
        <%= f.telephone_field :phone_number %>
      </div>

      <div class="">
        <%= f.label :date_of_birth %>
        <%= select_year(Date.today, start_year: 1920, end_year: 1998) %>
        <%= select_month DateTime.now %>
        <%= select_day DateTime.now  %>
      </div>

      <div class="signup-button">
        <%= f.submit 'Submit', class: "signup-button" %>
      </div>

  </div>
<% end %>
</div>

<div class="login">

  <h1>Login</h1>

  <button type="button" class="close">x</button>
  <%= form_tag sessions_path do%>
  <div class="">
    <%= label_tag :email %><%= text_field_tag :email, params[:email] %>
  </div>
  <div class="">
    <%= label_tag :password %><%= password_field_tag :password %>
  </div>
  <div class="login-button">
    <%= submit_tag "Login", class: "login-button" %>
  </div>
</div>
<% end %>

<div class="homepage-search">
	<%= form_tag vehicles_path, method: :get, class: "navbar-form navbar-left search-form" do %>
	  <%= text_field_tag(
	      :search,
	      params[:search],
	      placeholder: "Where would you like to go?",
	      class: "homepage-form-control"
	  ) %>
		 <%= submit_tag "Search", class: "btn-btn-primary" %>
	<% end %>

  <% if @vehicles.present? %>
    <% render :vehicles %>
  <% end %>
</div>

</div>

