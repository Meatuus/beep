      <%#= f.label :password %>
      <%#= f.password_field :password %>
    </div>
    <div class="">
      <%#= f.label :password_confirmation %>
      <%#= f.password_field :password_confirmation %>
    </div>
  </div> -->

  <div class="edit-user-form">

      <div class="user-attr">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>

      <div class="user-attr">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>

      <div class="user-attr">
        <%= f.label :phone_number %>
        <%= f.telephone_field :phone_number %>
      </div>

      <div class="user-attr">
        <%= f.label :date_of_birth %>
        <%= select_year(Date.today, start_year: 1920, end_year: 1998) %>
        <%= select_month DateTime.now %>
        <%= select_day DateTime.now  %>
      </div>

      <div class="signup-button edit-button">
        <%= f.submit 'Submit', class: "signup-button" %>
      </div>

  </div>
<% end %>
</div>

