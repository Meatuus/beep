<div class="edit-user-container">

  <%= form_for current_user do |f| %>
    <%if current_user.errors.any? %>
      <div class="error_messages">
        <h2>Entry is invalid</h2>
        <ul>
          <% current_user.errors.full_messages.each do |message| %>
            <li> <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <!-- <div class="">
    <h2>Account Info</h2>
