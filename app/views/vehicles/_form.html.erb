<%= form_for @vehicle do |f| %>
	<% if @vehicle.errors.any? %>
		<div class="error_messages">
			<ul>
				<% @vehicle.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
  <div class="vehicle_form">
  	<div class="vehicle-form-input">
  		<% f.hidden_field :owner_id, value: @owner_id %>
  	</div>
  	<div class="vehicle-form-input">
  		<%= f.label :vehicle_year %><br>
  		<%= f.number_field :vehicle_year %>
  	</div>
  	<div class="vehicle-form-input">
  		<%= f.label :vehicle_make %><br>
  		<%= f.text_field :vehicle_make %>
  	</div>
  	<div class="vehicle-form-input">
  		<%= f.label :vehicle_model %><br>
  		<%= f.text_field :vehicle_model %>
  	</div>
  	<div class="vehicle-form-input">
  		<%= f.label :seats %><br>
  		<%= f.number_field :seats %>
  	</div>
  	<div class="vehicle-form-input" id="vehicle_street_address">
  		<%= f.label :street_address %><br>
  		<%= f.text_field :street_address %>
  	</div>
  	<div class="vehicle-form-input" id="vehicle_city">
  		<%= f.label :city %><br>
  		<%= f.text_field :city %>
  	</div>
  	<div class="vehicle-form-input" id="vehicle_province">
  		<%= f.label :province %><br>
  		<%= f.text_field :province %>
  	</div>
  	<div class="vehicle-form-input" id="vehicle_postal_code">
  		<%= f.label :postal_code %><br>
  		<%= f.text_field :postal_code %>
  	</div>
  	<div class="new-vehicle-button"><%= submit_tag "Submit", class: 'new-veh-btn-text' %></div>
  </div>
<% end %>
