<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <%if @user.errors.any? %>
    <div class="error_messages">
      <h2>Entry is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li> <%= message %>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Account Info</h2>


  <div class="">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>


<h2>Personal Information</h2>


  <div class="">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="">
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="">
    <%= f.label :date_of_birth %>
    <%= select_month DateTime.now %>
    <%= select_day DateTime.now  %>
    <%= select_year(Date.today, start_year: 1920, end_year: 1998) %>
  </div>

  <div class="">
    <%= f.submit %>
  </div>
<% end %>
