<!DOCTYPE html>
<html>
	<head>
		<title>Beep</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
    <script src="https://use.fontawesome.com/2fd75991c7.js"></script>
	</head>

	<body>
		<header>

			<h1 class="beep-title"><%= image_tag("logo.png", :alt => "logo", :size => "100x80") %></h1>
			<ul class="navigation-bar">
				<% if current_user %>
					<li>Hello <%= current_user.first_name %> | <%= link_to 'Log Out', sessions_path, method: :delete %></li>
				<% else %>
					<li><%= link_to 'Log In/Sign Up', new_users_path %></li>
				<% end %>
        <i class="fa fa-bars" aria-hidden="true"></i>
      </ul>

				<a href="/vehicles">Vehicles</a> | <a href="/users">Profile</a><br>
				<a href="/vehicles/new">Add a Vehicle</a>
		</header>
		<% if flash[:notice]%>
			<p><%=flash[:notice]%></p>
		<% end %>
		<%= yield %>
	</body>
</html>
