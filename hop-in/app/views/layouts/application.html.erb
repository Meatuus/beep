<!DOCTYPE html>
<html>
	<head>
		<title>Beep</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<header>
			<h1 class="beep-title">Beep</h1>
			<ul class="navigation-bar">
				<% if current_user %>
					<p>Hello <%= current_user.first_name %> | <%= link_to 'Log Out', sessions_path, method: :delete %></p>
				<% else %>
					<p><%= link_to 'Log In/Sign Up', new_users_path %></p>
				<% end %>

				<a href="/vehicles">Vehicles</a> | <a href="/users">Profile</a>
			</ul>
		</header>
		<% if flash[:notice]%>
			<p><%=flash[:notice]%></p>
		<% end %>
		<%= yield %>
	</body>
</html>
